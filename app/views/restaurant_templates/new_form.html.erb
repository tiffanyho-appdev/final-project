<h1>
  Add a new restaurant
</h1>


<hr>

<form action="/create_restaurant" method="post">

  <div class="form-group">
    <label for="rest_name">
      Rest name
    </label>

    <input type="text" id="rest_name" name="rest_name" class="form-control">
  </div>

  <div class="form-group">
    <label for="rest_address">
      Rest address
    </label>

    <input type="text" id="rest_address" name="rest_address" class="form-control">
  </div>

  <div class="form-group">
    <label for="rest_genre">
      Rest genre
    </label>

    <input type="text" id="rest_genre" name="rest_genre" class="form-control">
  </div>

  <div class="form-group">
    <label for="rest_rating">
      Rest rating
    </label>

    <input type="text" id="rest_rating" name="rest_rating" class="form-control">
  </div>

  <div class="form-group">
    <label for="rest_link">
      Rest link
    </label>

    <input type="text" id="rest_link" name="rest_link" class="form-control">
  </div>

  <div class="form-group">
    <label for="rest_pic">
      Rest pic
    </label>

    <input type="text" id="rest_pic" name="rest_pic" class="form-control">
  </div>

  <div class="form-group">
    <label for="rest_menu">
      Rest menu
    </label>

    <input type="text" id="rest_menu" name="rest_menu" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create restaurant
  </button>
</form>

<hr>

<a href="/restaurants">
  Go back
</a>
