<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All restaurants
    </h1>

    <a href="/restaurants/new" class="btn btn-block btn-outline-secondary">
      Add a new restaurant
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Rest name
        </th>

        <th>
          Rest address
        </th>

        <th>
          Rest genre
        </th>

        <th>
          Rest rating
        </th>

        <th>
          Rest link
        </th>

        <th>
          Rest pic
        </th>

        <th>
          Rest menu
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @restaurants.each do |restaurant| %>
      <tr>
        <td>
          <%= restaurant.id %>
        </td>

        <td>
          <%= restaurant.rest_name %>
        </td>

        <td>
          <%= restaurant.rest_address %>
        </td>

        <td>
          <%= restaurant.rest_genre %>
        </td>

        <td>
          <%= restaurant.rest_rating %>
        </td>

        <td>
          <%= restaurant.rest_link %>
        </td>

        <td>
          <%= restaurant.rest_pic %>
        </td>

        <td>
          <%= restaurant.rest_menu %>
        </td>

        <td>
          <%= time_ago_in_words(restaurant.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(restaurant.updated_at) %> ago
        </td>

        <td>
          <a href="/restaurants/<%= restaurant.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
