<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Planned meal #<%= @planned_meal.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/planned_meals" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/planned_meals/<%= @planned_meal.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit planned meal
        </a>
      </div>

      <div class="col">
        <a href="/delete_planned_meal/<%= @planned_meal.id %>" class="btn btn-block btn-outline-secondary">
          Delete planned meal
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Rest
      </dt>
      <dd>
        <%= @planned_meal.rest_id %>
      </dd>

      <dt>
        Day
      </dt>
      <dd>
        <%= @planned_meal.day_id %>
      </dd>

      <dt>
        Order in day
      </dt>
      <dd>
        <%= @planned_meal.order_in_day %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@planned_meal.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@planned_meal.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

