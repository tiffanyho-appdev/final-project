<h1>
  Add a new place
</h1>


<hr>

<form action="/create_place" method="post">

  <div class="form-group">
    <label for="place_name">
      Place name
    </label>

    <input type="text" id="place_name" name="place_name" class="form-control">
  </div>

  <div class="form-group">
    <label for="place_address">
      Place address
    </label>

    <input type="text" id="place_address" name="place_address" class="form-control">
  </div>

  <div class="form-group">
    <label for="place_description">
      Place description
    </label>

    <input type="text" id="place_description" name="place_description" class="form-control">
  </div>

  <div class="form-group">
    <label for="place_rating">
      Place rating
    </label>

    <input type="text" id="place_rating" name="place_rating" class="form-control">
  </div>

  <div class="form-group">
    <label for="place_link">
      Place link
    </label>

    <input type="text" id="place_link" name="place_link" class="form-control">
  </div>

  <div class="form-group">
    <label for="place_pic">
      Place pic
    </label>

    <input type="text" id="place_pic" name="place_pic" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create place
  </button>
</form>

<hr>

<a href="/places">
  Go back
</a>
