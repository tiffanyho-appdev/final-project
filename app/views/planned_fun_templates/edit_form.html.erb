<h1>
  Edit planned fun #<%= @planned_fun.id %>
</h1>

<hr>

<form action="/update_planned_fun/<%= @planned_fun.id %>" method="post">

  <div class="form-group">
    <label for="place_id">
      Place
    </label>

    <input type="text" id="place_id" name="place_id" class="form-control" value="<%= @planned_fun.place_id %>">
  </div>

  <div class="form-group">
    <label for="day_id">
      Day
    </label>

    <input type="text" id="day_id" name="day_id" class="form-control" value="<%= @planned_fun.day_id %>">
  </div>

  <div class="form-group">
    <label for="order_in_day">
      Order in day
    </label>

    <input type="text" id="order_in_day" name="order_in_day" class="form-control" value="<%= @planned_fun.order_in_day %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update planned fun
  </button>
</form>

<hr>

<a href="/planned_funs">
  Go back
</a>
