<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All planned funs
    </h1>

    <a href="/planned_funs/new" class="btn btn-block btn-outline-secondary">
      Add a new planned fun
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Place
        </th>

        <th>
          Day
        </th>

        <th>
          Order in day
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @planned_funs.each do |planned_fun| %>
      <tr>
        <td>
          <%= planned_fun.id %>
        </td>

        <td>
          <%= planned_fun.place_id %>
        </td>

        <td>
          <%= planned_fun.day_id %>
        </td>

        <td>
          <%= planned_fun.order_in_day %>
        </td>

        <td>
          <%= time_ago_in_words(planned_fun.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(planned_fun.updated_at) %> ago
        </td>

        <td>
          <a href="/planned_funs/<%= planned_fun.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
