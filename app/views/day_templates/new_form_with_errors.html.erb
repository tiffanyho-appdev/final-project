<!-- Validation failure messages -->
<% if @day.present? %>
  <% if @day.errors.any? %>
    <% @day.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new day
</h1>


<hr>

<form action="/create_day" method="post">

  <div class="form-group">
    <label for="itinerary_id">
      Itinerary
    </label>

    <input type="text" id="itinerary_id" name="itinerary_id" class="form-control" value="<%= @day.itinerary_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create day
  </button>
</form>

<hr>

<a href="/days">
  Go back
</a>
