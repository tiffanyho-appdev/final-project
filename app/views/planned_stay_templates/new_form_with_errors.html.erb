<!-- Validation failure messages -->
<% if @planned_stay.present? %>
  <% if @planned_stay.errors.any? %>
    <% @planned_stay.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new planned stay
</h1>


<hr>

<form action="/create_planned_stay" method="post">

  <div class="form-group">
    <label for="hotel_id">
      Hotel
    </label>

    <input type="text" id="hotel_id" name="hotel_id" class="form-control" value="<%= @planned_stay.hotel_id %>">
  </div>

  <div class="form-group">
    <label for="day_id">
      Day
    </label>

    <input type="text" id="day_id" name="day_id" class="form-control" value="<%= @planned_stay.day_id %>">
  </div>

  <div class="form-group">
    <label for="order_in_day">
      Order in day
    </label>

    <input type="text" id="order_in_day" name="order_in_day" class="form-control" value="<%= @planned_stay.order_in_day %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create planned stay
  </button>
</form>

<hr>

<a href="/planned_stays">
  Go back
</a>
