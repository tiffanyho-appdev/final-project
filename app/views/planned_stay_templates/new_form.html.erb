<h1>
  Add a new planned stay
</h1>


<hr>

<form action="/create_planned_stay" method="post">

  <div class="form-group">
    <label for="hotel_id">
      Hotel
    </label>

    <input type="text" id="hotel_id" name="hotel_id" class="form-control">
  </div>

  <div class="form-group">
    <label for="day_id">
      Day
    </label>

    <input type="text" id="day_id" name="day_id" class="form-control">
  </div>

  <div class="form-group">
    <label for="order_in_day">
      Order in day
    </label>

    <input type="text" id="order_in_day" name="order_in_day" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create planned stay
  </button>
</form>

<hr>

<a href="/planned_stays">
  Go back
</a>
